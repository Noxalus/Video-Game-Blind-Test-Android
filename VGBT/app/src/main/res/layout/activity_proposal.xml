<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.noxalus.vgbt.activities.ProposalActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="If you want to suggest a music or any new feature that you would like to see in this application, please tell us using the field below."
        android:id="@+id/proposalsInfoTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/proposalsEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Write your proposals here"
        android:layout_below="@+id/proposalsInfoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/proposalsInfoTextView"
        android:layout_alignEnd="@+id/proposalsInfoTextView"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendButton"
        android:layout_below="@+id/proposalsEditText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
