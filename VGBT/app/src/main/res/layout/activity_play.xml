<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.noxalus.vgbt.activities.PlayActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please select the kind of game you want to play."
        android:id="@+id/playInfoTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:gravity="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Ranked game"
        android:id="@+id/rankedGameButton"
        android:layout_below="@+id/playInfoTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        style="@style/ButtonStyle" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Training game"
        android:id="@+id/trainingGameButton"
        android:layout_below="@+id/rankedGameButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        style="@style/ButtonStyle" />
</RelativeLayout>