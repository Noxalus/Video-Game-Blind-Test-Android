<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.noxalus.vgbt.videogameblindtest.activities.ModeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please select what you want to guess."
        android:id="@+id/modeInfoTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:gravity="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Name"
        android:id="@+id/nameButton"
        android:layout_below="@+id/modeInfoTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        style="@style/ButtonStyle" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Game"
        android:id="@+id/gameButton"
        android:layout_below="@+id/nameButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        style="@style/ButtonStyle" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Composer"
        android:id="@+id/composerButton"
        android:layout_below="@+id/gameButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        style="@style/ButtonStyle" />
</RelativeLayout>
